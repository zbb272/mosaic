<h1>Edit Yer Junk!</h1>

<%= form_for @post do |p|  %>

  <%= p.label :title %>
  <%= p.text_field :title %><br>
  <br>

  <%= p.label :description%>
  <%= p.text_field :description%><br>
  <br>

  <%= p.collection_check_boxes(:tag_ids, Tag.all, :id, :name) %><br>
  <br>

  <%= p.submit "Make a Change!" %>


  <% end %>
